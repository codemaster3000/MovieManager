<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>

<BorderPane id="background" prefHeight="650.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <ToolBar fx:id="topbar">
            <items>
                <Region maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="17.0" styleClass="spacer" />
                <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="874.0" styleClass="segmented-button-bar">
                   <children>
                       <Button fx:id="buttonMovies" onAction="#showMoviesPane" prefHeight="25.0" prefWidth="88.0" styleClass="first" text="Movies" HBox.hgrow="NEVER" />
                       <Button fx:id="buttonTV" onAction="#showTVPane" prefHeight="25.0" prefWidth="93.0" text="TV Series" HBox.hgrow="NEVER" />
                       <Button fx:id="buttonDocu" onAction="#showDocuPane" prefHeight="25.0" prefWidth="131.0" text="Documentations" HBox.hgrow="NEVER" />
                       <Button fx:id="buttonStatistics" onAction="#showStatisticsPane" prefHeight="25.0" prefWidth="91.0" text="Statistics" HBox.hgrow="NEVER" />
                       <Button fx:id="buttonReleases" onAction="#showReleasesPane" prefHeight="25.0" prefWidth="98.0" text="Releases" HBox.hgrow="NEVER" />
                  <Button fx:id="buttonScanner" mnemonicParsing="false" onAction="#showScannerPane" prefHeight="25.0" prefWidth="104.0" text="Scan Files" HBox.hgrow="NEVER" />
                       <Button fx:id="buttonSettings" onAction="#showSettingsPane" prefHeight="25.0" prefWidth="84.0" styleClass="last" text="Settings" HBox.hgrow="NEVER" />
                  <Pane prefHeight="25.0" prefWidth="78.0" HBox.hgrow="ALWAYS" />
                  <ComboBox nodeOrientation="LEFT_TO_RIGHT" prefHeight="25.0" prefWidth="129.0" promptText="User" HBox.hgrow="NEVER">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </ComboBox>
                   </children>
                </HBox>
            </items>
        </ToolBar>
    </top>
   <center>
      <AnchorPane fx:id="contentPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <AnchorPane id="backgroundDarkBlack" maxHeight="20.0" minHeight="20.0" prefHeight="20.0" prefWidth="1000.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
